<PopupChooseFile>
    canvas:
        Color:
            rgba: 0, 0, .4, 1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "vertical"

    FileChooserIconView:
        size_hint: 1, .9
        path: root.current_dir
        on_submit: root.select(self.selection[0])
    BoxLayout:
        size_hint: 1, .1
        Button:
            text: "Cancel"
            background_color: 0, .5, 1, 1
            on_release: root.cancel()