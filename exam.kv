<MusicPlayer>
    status: status_text
    play_button: play_button
    stop_button: stop_button
    time_bar: time_bar
    time_text: time_text
    volume_bar: volume_bar
    volume_text: volume_text
    exam_number: exam_number

    orientation: 'vertical'
    padding: 20

    Label:
        size_hint: 1, .1
        id: exam_number
        text: "Show exam_number"
        center: root.center
        color: 1, 0, 0, 1

    Label:
        size_hint: 1, .5
        id: status_text
        text: ""
        center: root.center
        color: 1, 0, 0, 1

    BoxLayout:
        size_hint: 1, .1

        Label:
            id: time_text
            size_hint: 0.1, 1
            text: '0:00/0:00'

        Slider:
            id: time_bar
            size_hint: 0.9, 1
            max: 100
            value: 0
            on_value :root.time_change(self.value)


    BoxLayout:
        size_hint:1, .1
        Button:
            id: play_button
            text: 'Interval'
            background_color: 0, .5, 1, 1
            on_release: root.play_or_stop()

        Button:
            id: stop_button
            text: 'Stop'
            background_color: 0, .5, 1, 1
            on_release: root.stop()

        Label:
            id: volume_text
            text: '50'

        Slider:
            id: volume_bar
            max: 100
            value: 50
            on_value: root.volume_change(self.value)

        Button:
            text: 'Choose File'
            on_release: root.choose()


